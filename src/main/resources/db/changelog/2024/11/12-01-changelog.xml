<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="1731429929420-1" author="alina">
        <createTable tableName="attempt_results">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="pk_attemptresults"/>
            </column>
            <column name="attempt_id" type="UUID"/>
            <column name="test_results_json" type="JSONB"/>
            <column name="duration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="error_details" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="attempt_id"
                                 baseTableName="attempt_results"
                                 constraintName="FK_ATTEMPTRESULTS_ON_ATTEMPT"
                                 referencedColumnNames="id"
                                 referencedTableName="attempt"/>
    </changeSet>
</databaseChangeLog>